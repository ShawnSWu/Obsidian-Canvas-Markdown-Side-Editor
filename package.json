{
	"name": "canvas-md-side-editor",
	"version": "1.1.0",
	"description": "Open a Canvas card's linked Markdown file in a right-side editor pane with one click.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"canvas",
		"markdown",
		"editor"
	],
	"author": "Shawn Wu",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},
	"dependencies": {
		"@codemirror/lang-markdown": "^6.3.4",
		"@codemirror/state": "^6.5.2",
		"@codemirror/view": "^6.38.2"
	}
}
